#include <iostream>
#include <iomanip>
#include <ctime>
#include <stdlib.h>
#include <time.h>
#include <iomanip>
using namespace std;

int** create_dynamicMatrix(int n)
{
	int** Arr = new int*[n];
	for (int i = 0; i < n; i++) {
	    Arr[i] = new int[n];
	}
	return Arr;
}

void array_input(int **p, int n)
{
	srand(time(NULL));
	for(int i = 0; i < n; i++){
		for(int j = 0; j < n; j++){
			p[i][j] = rand() % 100;
		}
	}
}

void array_output(int **p, int n)
{
	for(int i = 0; i < n; i++){
		for(int j = 0; j < n; j++){
			cout << setw(6) << p[i][j];
		}
	cout << endl;
	}
}



void average(int **arr1, int **arr2, int  n)
{
    int s,s1; double r;
    for(int i = 0; i < n; ++i){
        s=0;
        s1=0;
        for(int j = 0; j<n; ++j){
            s += abs(arr1[i][j]);
            s1 += abs(arr2[i][j]);
        }
    r=double((s+s1)/2);
    cout<<"Average of M-norma (A+B) "<< i+1 <<" : "<<r<<endl;
    }
}


int main()
{
	int n;
	cout<< "Enter dimension matrix n*n" << endl;
	cout<< " n = "; cin >> n;
	
	int** arr1=create_dynamicMatrix(n);
	int** arr2=create_dynamicMatrix(n);
	array_input(arr1, n);
	array_input(arr2, n);
	array_output(arr1, n);
	cout << endl;
	array_output(arr2, n);
	cout << endl;
	average(arr1,arr2,n);
	
	system("pause");	
}
